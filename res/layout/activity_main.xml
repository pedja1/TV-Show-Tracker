<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_bg">

    <GridView
        android:id="@+id/lvShows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ff000000"
        android:longClickable="true"
        android:numColumns="@integer/main_column_num"
        android:drawSelectorOnTop="true"/>

    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvNoShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:text="@string/no_shows_message"
        android:visibility="gone"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/llUpcomingEpisode"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/glass_background"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_episode"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <AutoScrollingTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_marginTop="3dp"
            android:id="@+id/tvUpcomingEpisode"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>

    </LinearLayout>

</RelativeLayout>
